<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="com"/>
    <bean id="Item" class="com.lesson2.ItemDAOWithSpring.entity.Item"></bean>
    <bean id="ItemDAO" class="com.lesson2.ItemDAOWithSpring.dao.ItemDAO"></bean>
    <bean id="ItemService" class="com.lesson2.ItemDAOWithSpring.service.ItemService"></bean>

    <bean id="Route" class="com.lesson2.ServiceRouteStep.Route"></bean>
    <bean id="Service" class="com.lesson2.ServiceRouteStep.Service"></bean>
    <bean id="Step" class="com.lesson2.ServiceRouteStep.Step"></bean>





</beans>

